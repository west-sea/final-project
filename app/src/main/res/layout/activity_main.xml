<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:id="@+id/main_activity"
    tools:context=".Activity.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash"
        app:lottie_fileName="open.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_ani"
        app:lottie_fileName="main-animation.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:paddingBottom="100dp"
        />

    <Button
        android:id="@+id/imgbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="684dp"
        android:background="@drawable/button_img"
        android:text="IMAGE"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:drawableTop="@drawable/ic_img"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toStartOf="@id/freebut"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toEndOf="@id/numbut"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
 />

    <Button
        android:id="@+id/numbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="684dp"
        android:text="NUMBER"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:drawableTop="@drawable/ic_num"
        android:drawablePadding="8dp"
        android:background="@drawable/button_img"
        app:layout_constraintEnd_toStartOf="@id/imgbut"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/freebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="684dp"
        android:paddingTop="10dp"
        android:text="FREE"
        android:textColor="@color/white"
        android:textSize="10sp"

        android:drawableTop="@drawable/ic_free"
        android:background="@drawable/button_img"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toEndOf="@id/imgbut"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>